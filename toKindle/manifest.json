{
    "name": "Send to Kindle",
    "short_name": "ToKindle",
    "description": "Send web articles to your Kindle",
    "start_url": "/toKindle/",
    "id": "/toKindle/",
    "display": "standalone",
    "display_override": ["standalone", "minimal-ui"],
    "background_color": "#ffffff",
    "theme_color": "#2196F3",
    "orientation": "portrait-primary",
    "categories": ["utilities", "productivity"],
    "icons": [
        {
            "src": "/toKindle/icons/icon-72x72.png",
            "sizes": "72x72",
            "type": "image/png",
            "purpose": "any maskable"
        },
        {
            "src": "/toKindle/icons/icon-192x192.png",
            "sizes": "192x192",
            "type": "image/png",
            "purpose": "any maskable"
        },
        {
            "src": "/toKindle/icons/icon-512x512.png",
            "sizes": "512x512",
            "type": "image/png",
            "purpose": "any maskable"
        }
    ],
    "scope": "/toKindle/",
    "share_target": {
        "action": "/toKindle/share-target/",
        "method": "GET",
        "params": {
            "title": "title",
            "text": "text",
            "url": "url"
        }
    }
} 